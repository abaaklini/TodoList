<h1>Listing TODO Lists</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @todo_lists.each do |todo_list| %>
  <tr>
    <td><%=h todo_list.title %></td>
    <td><%= link_to 'Show', todo_list %></td>
    <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
    <td><%= link_to 'Destroy', todo_list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New todo_list', new_todo_list_path %>
